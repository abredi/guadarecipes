
addBtn = document.getElementById('addToCart_' +<%= @all_product_orders[0].product_id.to_s %>)
<% if @all_product_orders.length > 0 %>
    if (addBtn) {
        addBtn.innerText = "View Cart";
        addBtn.parentElement.removeAttribute("data-remote")
        addBtn.parentElement.removeAttribute("data-method")
    }
<% else %>
    if (addBtn) {
        addBtn.innerText = "Add To Cart";
        addBtn.parentElement.setAttribute("data-remote", "true")
        parentElement.setAttribute("data-method", "put")
    }
<% end %>

document
        .getElementById('totalProduct_' +<%= @all_product_orders[0].product_id.to_s %>)
        .innerText = "<%= @all_product_orders.length %>";

